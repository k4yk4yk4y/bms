<div class="border p-3 mb-3 comp-point-reward-form">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h6 class="mb-0">Comp Point Reward #<span class="reward-index"></span></h6>
    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeCompPointReward(this)">
      <i class="bi bi-trash"></i> Remove
    </button>
  </div>

  <div class="row">
    <div class="col-md-6">
      <!-- Title -->
      <div class="mb-3">
        <label for="comp_point_reward_title" class="form-label">Название награды (title) *</label>
        <input type="text" class="form-control" name="comp_point_reward[title]" id="comp_point_reward_title" 
                value="<%= existing_comp_point&.title %>" required>

      </div>

      <!-- Issue Chargeable Award -->
      <div class="mb-3">
        <label for="comp_point_reward_issue_chargeable_award" class="form-label">Расходуемые баллы (issue_chargeable_award)</label>
        <input type="number" class="form-control" name="comp_point_reward[issue_chargeable_award]" 
               id="comp_point_reward_issue_chargeable_award" min="0"  
               value="<%= existing_comp_point&.issue_chargeable_award %>">

      </div>

      <!-- Issue Persistent Award -->
      <div class="mb-3">
        <label for="comp_point_reward_issue_persistent_award" class="form-label">Статусные баллы (issue_persistent_award)</label>
        <input type="number" class="form-control" name="comp_point_reward[issue_persistent_award]" 
               id="comp_point_reward_issue_persistent_award" min="0"  
               value="<%= existing_comp_point&.issue_persistent_award %>">

      </div>
    </div>

    <div class="col-md-6">
      <!-- Note: Currencies, Groups, Tags, Usage Limitations, and Wagering Strategy are in Basic Information -->

    </div>
  </div>

  <!-- Advanced Parameters Toggle -->
  <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleAdvancedParams(this)">
    <span class="toggle-text">+ Показать дополнительные параметры</span>
  </button>

  <!-- Advanced Parameters (Hidden by default) -->
  <div class="advanced-params mt-3" style="display: none;">
    <div class="row">
      <div class="col-md-6">
        <!-- Custom Config Fields -->
        <div class="mb-3">
          <label class="form-label">Дополнительные параметры (JSON)</label>
          <textarea class="form-control" name="comp_point_reward[config_json]" rows="3" 
                    ><%= existing_comp_point&.config&.to_json %></textarea>

        </div>
      </div>
    </div>
  </div>
</div>
