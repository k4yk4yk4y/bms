<%
  reward ||= nil
  index ||= 0
  existing_comp_point = reward || (bonus.persisted? ? bonus.comp_point_rewards.first : nil)
  field_prefix = "comp_point_rewards[#{index}]"
%>

<div class="border p-3 mb-3 comp-point-reward-form" id="comp-point-reward-<%= index %>">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h6 class="mb-0">Comp Point Reward #<%= index + 1 %></h6>
    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeCompPointReward(this)">
      <i class="bi bi-trash"></i> Remove
    </button>
  </div>

  <% if existing_comp_point&.id %>
    <%= hidden_field_tag "#{field_prefix}[id]", existing_comp_point.id %>
  <% end %>

  <div class="main-params-container">
    <div class="reward-param-field mb-3 full-width">
      <label for="comp_point_reward_title_<%= index %>" class="form-label">Reward name (title) *</label>
      <input type="text" class="form-control" name="<%= field_prefix %>[title]" id="comp_point_reward_title_<%= index %>"
             value="<%= existing_comp_point&.title %>" required>
    </div>

    <div class="reward-param-field mb-3">
      <label for="comp_point_reward_points_amount_<%= index %>" class="form-label">Points amount (points_amount) *</label>
      <input type="number" class="form-control" name="<%= field_prefix %>[points_amount]"
             id="comp_point_reward_points_amount_<%= index %>" min="0"
             value="<%= existing_comp_point&.points_amount %>" required>
    </div>

    <div class="reward-param-field mb-3">
      <label for="comp_point_reward_multiplier_<%= index %>" class="form-label">Multiplier (multiplier)</label>
      <input type="number" class="form-control" name="<%= field_prefix %>[multiplier]"
             id="comp_point_reward_multiplier_<%= index %>" min="0" step="0.01"
             value="<%= existing_comp_point&.multiplier %>">
    </div>
  </div>

  <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleAdvancedParams(this)">
    <span class="toggle-text">+ Show advanced parameters</span>
  </button>

  <div class="advanced-params mt-3" style="display: none;">
    <div class="advanced-params-container">
      <div class="reward-param-field mb-3 full-width">
        <label class="form-label">Advanced parameters (JSON)</label>
        <textarea class="form-control" name="<%= field_prefix %>[config_json]" rows="3"
                  ><%= existing_comp_point&.config&.to_json %></textarea>
      </div>
    </div>
  </div>
</div>
