<%
  reward ||= nil
  index ||= 0
  existing_bonus_code = reward || (bonus.persisted? ? bonus.bonus_code_rewards.first : nil)
  field_prefix = "bonus_code_rewards[#{index}]"
%>

<div class="border p-3 mb-3 bonus-code-reward-form" id="bonus-code-reward-<%= index %>">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h6 class="mb-0">Bonus Code Reward #<%= index + 1 %></h6>
    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeBonusCodeReward(this)">
      <i class="bi bi-trash"></i> Remove
    </button>
  </div>

  <% if existing_bonus_code&.id %>
    <%= hidden_field_tag "#{field_prefix}[id]", existing_bonus_code.id %>
  <% end %>

  <div class="main-params-container">
    <div class="reward-param-field mb-3 full-width">
      <label for="bonus_code_reward_title_<%= index %>" class="form-label">Reward name (title) *</label>
      <input type="text" class="form-control" name="<%= field_prefix %>[title]" id="bonus_code_reward_title_<%= index %>"
             value="<%= existing_bonus_code&.title %>" required>
    </div>

    <div class="reward-param-field mb-3 full-width">
      <label for="bonus_code_reward_set_bonus_code_<%= index %>" class="form-label">Bonus code (set_bonus_code) *</label>
      <input type="text" class="form-control" name="<%= field_prefix %>[set_bonus_code]"
             id="bonus_code_reward_set_bonus_code_<%= index %>"
             value="<%= existing_bonus_code&.code %>" required>
    </div>
  </div>

  <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleAdvancedParams(this)">
    <span class="toggle-text">+ Show advanced parameters</span>
  </button>

  <div class="advanced-params mt-3" style="display: none;">
    <div class="advanced-params-container">
      <div class="reward-param-field mb-3 full-width">
        <label class="form-label">Advanced parameters (JSON)</label>
        <textarea class="form-control" name="<%= field_prefix %>[config_json]" rows="3"
                  ><%= existing_bonus_code&.config&.to_json %></textarea>
      </div>
    </div>
  </div>
</div>
