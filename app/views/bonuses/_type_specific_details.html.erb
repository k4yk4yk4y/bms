<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h6 class="card-title mb-0">Event Configuration</h6>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-5">Event Type:</dt>
          <dd class="col-sm-7">
            <span class="badge bg-info"><%= bonus.event&.humanize %></span>
          </dd>
          
          <dt class="col-sm-5">Rewards Count:</dt>
          <dd class="col-sm-7"><%= bonus.all_rewards.count %></dd>
          
          <dt class="col-sm-5">Reward Types:</dt>
          <dd class="col-sm-7">
            <% if bonus.reward_types.any? %>
              <% bonus.reward_types.each do |type| %>
                <span class="badge bg-success me-1"><%= type.humanize %></span>
              <% end %>
            <% else %>
              <span class="text-muted">No rewards configured</span>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h6 class="card-title mb-0">Reward Details</h6>
      </div>
      <div class="card-body">
        <% if bonus.all_rewards.any? %>
          <% if bonus.bonus_rewards.any? %>
            <h6>Cash Bonuses:</h6>
            <% bonus.bonus_rewards.each do |reward| %>
              <div class="mb-2">
                <strong><%= reward.reward_type.humanize %>:</strong> 
                <%= reward.formatted_amount %>
              </div>
            <% end %>
          <% end %>
          
          <% if bonus.freespin_rewards.any? %>
            <h6>Freespins:</h6>
            <% bonus.freespin_rewards.each do |reward| %>
              <div class="mb-2">
                <strong><%= reward.formatted_spins %></strong>
                <% if reward.has_game_restrictions? %>
                  <br><small class="text-muted">Restrictions apply</small>
                <% end %>
              </div>
            <% end %>
          <% end %>
          
          <% if bonus.comp_point_rewards.any? %>
            <h6>Comp Points:</h6>
            <% bonus.comp_point_rewards.each do |reward| %>
              <div class="mb-2">
                <strong><%= reward.formatted_points %></strong>
                <% if reward.multiplier.present? %>
                  (x<%= reward.multiplier %>)
                <% end %>
              </div>
            <% end %>
          <% end %>
          
          <% if bonus.bonus_code_rewards.any? %>
            <h6>Bonus Codes:</h6>
            <% bonus.bonus_code_rewards.each do |reward| %>
              <div class="mb-2">
                <code><%= reward.code %></code>
                <span class="badge bg-secondary"><%= reward.formatted_code_type %></span>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-muted">No rewards configured yet.</p>
          <% if bonus.persisted? %>
            <a href="#" class="btn btn-primary btn-sm">Add Rewards</a>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>