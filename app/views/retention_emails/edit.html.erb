<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Edit retention email</h1>
    <%= link_to "View", retention_chain_retention_email_path(@retention_chain, @retention_email),
                class: "btn btn-outline-secondary" %>
  </div>
  <%= render "form",
             retention_chain: @retention_chain,
             retention_email: @retention_email,
             selected_bonuses: @selected_bonuses,
             autosave_url: retention_chain_retention_email_path(@retention_chain, @retention_email),
             autosave_method: :patch %>
</div>
