<% content_for(:title, "New request") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
          <i class="fas fa-plus text-primary"></i>
          New request
        </h1>
        <%= link_to marketing_index_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to list
        <% end %>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">
                <i class="fas fa-bullhorn"></i>
                Registration bonus request
              </h5>
            </div>
            <div class="card-body">
              <%= form_with model: @marketing_request, url: marketing_index_path, local: true, 
                            class: "needs-validation", 
                            data: { turbo: false } do |form| %>
                
                <% if @marketing_request.errors.any? %>
                  <div class="alert alert-danger" role="alert">
                    <h6><i class="fas fa-exclamation-triangle"></i> Fix the following errors:</h6>
                    <ul class="mb-0">
                      <% @marketing_request.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <%= form.label :request_type, "Request type", class: "form-label" %>
                    <%= form.select :request_type, 
                                    options_for_select(
                                      MarketingRequest::REQUEST_TYPES.map { |type| 
                                        [MarketingRequest::REQUEST_TYPE_LABELS[type], type] 
                                      }, 
                                      @marketing_request.request_type
                                    ),
                                    { prompt: "Select request type" },
                                    { class: "form-select", required: true } %>
                    <div class="invalid-feedback">
                      Please select a request type.
                    </div>
                  </div>

                </div>

                <div class="mb-3">
                  <%= form.label :platform, "Platform", class: "form-label" %>
                  <%= form.text_area :platform, 
                                     class: "form-control", 
                                     rows: 3,
                                     placeholder: "Platform link or description" %>
                  <div class="form-text">
                    You can provide a platform link or a text description
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <%= form.label :partner_email, "Partner email", class: "form-label" %>
                    <%= form.email_field :partner_email, 
                                         class: "form-control", 
                                         placeholder: "partner@example.com",
                                         required: true %>
                    <div class="invalid-feedback">
                      Please enter a valid partner email.
                    </div>
                  </div>

                  <div class="col-md-6 mb-3">
                    <%= form.label :promo_code, "Promo codes", class: "form-label" %>
                    <%= form.text_area :promo_code, 
                                       class: "form-control", 
                                       placeholder: "PROMO2024, BONUS2024, WELCOME2024",
                                       required: true,
                                       rows: 3,
                                       style: "text-transform: uppercase;" %>
                    <div class="form-text">
                      <strong>Multiple codes:</strong> separate with commas or new lines.<br>
                      <strong>One partner - one bonus:</strong> codes are auto-uppercased.<br>
                      <strong>No spaces:</strong> only letters, digits, and underscores are allowed.
                    </div>
                    <div class="invalid-feedback">
                      Please enter at least one promo code.
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <%= form.label :stag, "STAG", class: "form-label" %>
                    <%= form.text_field :stag, 
                                        class: "form-control", 
                                        placeholder: "unique_partner_id",
                                        required: true %>
                    <div class="form-text">
                      <strong>Unique partner identifier.</strong><br>
                      <strong>Important:</strong> one partner can only have one request.<br>
                      <strong>No spaces:</strong> spaces are removed automatically.
                    </div>
                    <div class="invalid-feedback">
                      Please enter STAG.
                    </div>
                  </div>

                  <div class="col-md-6 mb-3">
                    <%= form.label :status, "Status", class: "form-label" %>
                    <%= form.select :status, 
                                    options_for_select(
                                      MarketingRequest::STATUSES.map { |status| 
                                        [MarketingRequest::STATUS_LABELS[status], status] 
                                      }, 
                                      @marketing_request.status || 'pending'
                                    ),
                                    {},
                                    { class: "form-select" } %>
                    <div class="form-text">
                      Requests are created with status "Pending" by default
                    </div>
                  </div>
                </div>

                <div class="mb-4">
                  <%= form.label :activation_date, "Activation date", class: "form-label" %>
                  <%= form.datetime_local_field :activation_date, 
                                                class: "form-control" %>
                  <div class="form-text">
                    Set when the request is activated
                  </div>
                </div>

                <div class="d-flex justify-content-between">
                  <%= link_to marketing_index_path, class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-times"></i> Cancel
                  <% end %>
                  
                  <%= form.submit "Create request", 
                                  class: "btn btn-primary" do %>
                    <i class="fas fa-save"></i> Create request
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();

  // Auto-uppercase promo code and remove spaces from STAG
  const promoCodeField = document.querySelector('textarea[name="marketing_request[promo_code]"]');
  if (promoCodeField) {
    promoCodeField.addEventListener('input', function() {
      this.value = this.value.toUpperCase();
    });
  }

  const stagField = document.querySelector('input[name="marketing_request[stag]"]');
  if (stagField) {
    stagField.addEventListener('input', function() {
      this.value = this.value.replace(/\s+/g, '');
    });
  }
</script>
